@import 'fotorama';

.galleries {

  margin-top: 20px;

  .gallery {
    list-style-type: none;
    margin: 0;
    padding: 0;
    margin: 10px 10px;
    width: 100%;
    background-color: #fff;

    a {
      color: #83939C;
      text-decoration: none;
    }

    .image, .details {
      padding: 0;
      margin: 0;
    }

    .image {
      text-align: center;
      display: inline;
      width: 30%;
    }

    .details {
      width: 65%;
      float: right;

      h2, p {
        padding: 1px 5px;
        margin: 5px 0 0 0;
      }

      h2 {
        font-weight: 600;
      }
    }

  }

}

