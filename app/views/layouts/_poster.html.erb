<section class="sliderwrapper clearfix">
  <div class="tp-banner-container">
    <div class="tp-banner" >
      <% if home_page? %>
        <% if @homepage.images[0] %>
          <%= image_tag(@homepage.images[0].url, :width => "100%", :alt => "Движение к Истоку - Постер") %>
        <% end %>

      <% else %>
        <% if @homepage.images[1] %>
          <%= image_tag(@homepage.images[1].url, :width => "100%", :alt => "Движение к Истоку - Врезка") %>
        <% end %>
      <% end %>
    </div>
  </div>       
</section>
