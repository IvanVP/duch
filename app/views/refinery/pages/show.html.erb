<%= render '/refinery/content_page' %>

<div class="pages">

  <%- if @page.images -%>
    <div  class='fotorama'   id='gallery_images'
            data-width = "100%"
            data-ratio = "1600/900"
            data-nav = "thumbs"
            data-allowfullscreen = "true"
            data-transition = "crossfade"
            data-loop = "true"
            data-autoplay = "true" 
            data-keyboard = "true"
            data-swipe = "true"
      >
      <% @page.images.each do |image| %>              
        <%= image_tag(image.url) %>
      <% end %>
    </div>
  <%- end %>
</div>

<%= render 'layouts/social' -%>
