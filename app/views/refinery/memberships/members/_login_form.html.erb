 <div id="contact1">
  <%= form_for Refinery::User.new, :as => 'refinery_user', :url => refinery_user_session_path do | f | %>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.label :login, 'Логин' %>
      <%= f.text_field :login, :class => "form-control", :placeholder => t('.username') %>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.label :password, t('.password') %>
      <%= f.password_field :password, :class => "form-control" %>
    </div>
    <%= hidden_field_tag :redirect, params[:redirect] %>
    <%= hidden_field_tag :member_login, true %>
    <div class="text-center">
      <%= f.submit "Войти", id: "submit1", class: "btn btn-lg btn-primary" %>
    </div>
  <% end %>
</div>
