<%- if items.present? -%>
  <div  class='fotorama'   id='gallery_images'
          data-width = "100%"
          data-ratio = "800/600"
          data-nav = "thumbs"
          data-allowfullscreen = "native"
          data-transition = "crossfade"
          data-loop = "true"
          data-autoplay = "true" 
          data-keyboard = "true"
          data-swipe = "true"
     > 
    <%= render items %>
  </div>
  
<%- end -%>
